<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/main_head_bar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/text_agency_name"
        android:textSize="@dimen/text_size_14" />

    <EditText
        android:id="@+id/et_agency_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/button_bg_normal"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/text_agency_name"
        android:inputType="text"
        android:maxLength="16"
        android:singleLine="true"
        android:textSize="@dimen/text_size_10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:singleLine="true"
        android:text="@string/text_address1"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvbtn_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg_normal"
            android:drawableRight="@drawable/search_teacher_filter_arrow"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/text_choose"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tvbtn_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/button_bg_normal"
            android:drawableRight="@drawable/search_teacher_filter_arrow"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/text_choose"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tvbtn_region"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/button_bg_normal"
            android:drawableRight="@drawable/search_teacher_filter_arrow"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/text_choose"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/distance"
        android:textSize="@dimen/text_size_14" />

    <include layout="@layout/distance_shaft" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/text_agency_classify"
        android:textSize="@dimen/text_size_14"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvbtn_agency_classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/button_bg_normal"
        android:drawableRight="@drawable/search_teacher_filter_arrow"
        android:gravity="center"
        android:minWidth="@dimen/height_100"
        android:singleLine="true"
        android:text="@string/text_all"
        android:textSize="@dimen/text_size_10"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_filtrate_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/selector_button_login"
            android:text="@string/complete"
            android:textColor="@color/text_white" />
    </LinearLayout>

</LinearLayout>