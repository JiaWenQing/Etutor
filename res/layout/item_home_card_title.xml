<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:background="@color/app_bg"
    android:minHeight="@dimen/height_44"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:clickable="true"
            android:drawablePadding="@dimen/margin_10"
            android:drawableRight="@drawable/edit_nomal"
            android:gravity="center_vertical"
            android:text="@string/text_my_collect" />

        <TextView
            android:id="@+id/tv_card_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:clickable="true"
            android:drawablePadding="@dimen/margin_10"
            android:drawableRight="@drawable/selector_arrow_enter"
            android:gravity="center_vertical"
            android:text="更多"
            android:textColor="@color/text_login_color" />
    </RelativeLayout>

</LinearLayout>