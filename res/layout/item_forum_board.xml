<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/activity_forum_image"
        android:layout_width="@dimen/height_80"
        android:layout_height="@dimen/height_80"
        android:layout_margin="@dimen/padding_5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/forum_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="8"
                android:text="@string/my_forum"
                android:textColor="@color/text_need_title"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/forum_title_fabu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/forum_fabu"
                android:textColor="@color/text_need_item_title"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/forum_fabu_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="2"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/forum_colltct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forum_collect"
                android:textColor="@color/text_need_item_title"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/forum_colltct_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>