<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/app_bg"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/main_head_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_80"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/edit_bg_normal"
         >

        <ImageView
            android:id="@+id/imv_student_info_shead"
            android:layout_width="@dimen/width_80"
            android:layout_height="wrap_content"
            android:background="@drawable/default_avatar"
            android:clickable="true"
            android:padding="@dimen/padding_5" />

        <TextView
            android:id="@+id/tv_student_info_sname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_weight="1"
            android:text="@string/text_student_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg_normal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/text_study_school" />

        <TextView
            android:id="@+id/tv_study_school"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="2"
            android:background="@null"
            android:hint="@string/text_study_school" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg_normal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/text_age" />

        <TextView
            android:id="@+id/tv_student_info_sage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="2"
            android:background="@null"
            android:focusable="false"
            android:hint="@string/text_age" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg_normal"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_sex" />
        <TextView
            android:id="@+id/tv_student_info_ssex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="2"
            android:background="@null"
            android:focusable="false"
            android:hint="@string/text_sex" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg_normal"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_history_record" />

    </LinearLayout>
    <ListView 
        android:id="@+id/lv_history_release"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        
    </ListView>

</LinearLayout>