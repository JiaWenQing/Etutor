<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_5"
    android:minHeight="@dimen/height_44"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_card_top"
        android:layout_width="@dimen/width_30"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_10"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="@string/text_card_top"
        android:textColor="@color/color_location_selected" />

    <TextView
        android:id="@+id/tv_card_delete"
        android:layout_width="@dimen/width_30"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_10"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="@string/text_card_delete"
        android:textColor="@color/color_location_selected" />

</LinearLayout>