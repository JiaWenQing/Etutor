<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/text_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/icon_posts_delete"
            android:clickable="true"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_item_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10" >

            <TextView
                android:id="@+id/tv_posts_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@drawable/shape_corners_bg_blue"
                android:paddingLeft="@dimen/margin_3"
                android:paddingRight="@dimen/margin_3"
                android:text="é¡¶"
                android:textColor="@color/text_white" />

            <TextView
                android:id="@+id/tv_posts_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_need_title"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/imv_posts_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/red_point"
                android:scaleType="fitXY" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="start"
            android:lineSpacingExtra="@dimen/margin_1"
            android:minHeight="@dimen/height_20"
            android:scrollHorizontally="false"
            android:textColor="@color/text_login_color"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:id="@+id/img_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_1_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/app_logo"
                android:maxHeight="@dimen/height_100"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                />

            <ImageView
                android:id="@+id/img_1_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxHeight="@dimen/height_100"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                />

            <ImageView
                android:id="@+id/img_1_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxHeight="@dimen/height_100"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10" >

            <net.dx.etutor.view.imageview.RoundImageView
                android:id="@+id/imv_poster_avatar"
                android:layout_width="@dimen/width_20"
                android:layout_height="@dimen/width_20"
                android:src="@drawable/app_logo" />

            <TextView
                android:id="@+id/tv_poster_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:text="@string/app_name"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_3"
                android:background="@color/text_login_color" />

            <TextView
                android:id="@+id/tv_send_posts_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="19"
                android:text="@string/text_input_graduate_time"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_posts_praise_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_posts_praise"
                android:drawablePadding="@dimen/margin_2"
                android:gravity="center_vertical"
                android:text="10"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_posts_pv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:drawableLeft="@drawable/icon_posts_pv"
                android:drawablePadding="@dimen/margin_2"
                android:gravity="center_vertical"
                android:text="10"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_posts_reply_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_posts_comment"
                android:drawablePadding="@dimen/margin_2"
                android:gravity="center_vertical"
                android:text="10"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/line" />
    </LinearLayout>

</LinearLayout>