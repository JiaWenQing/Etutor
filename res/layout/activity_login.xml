<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white"
    android:orientation="vertical" >

    <include
        layout="@layout/main_head_bar"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:drawablePadding="@dimen/margin_10"
        android:drawableTop="@drawable/login_logo"
        android:gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/line" />

    <EditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@null"
        android:drawableLeft="@drawable/icon_account"
        android:drawablePadding="@dimen/margin_5"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/login_phone_hint"
        android:inputType="phone"
        android:maxLength="11"
        android:minHeight="@dimen/height_44"
        android:singleLine="true"
        android:textColor="@color/text_login_color"
        android:textColorHint="@color/text_login_color"
        android:textSize="@dimen/text_size_14" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/line" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@null"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="@dimen/margin_5"
        android:hint="@string/login_password_hint"
        android:inputType="textPassword"
        android:minHeight="@dimen/height_44"
        android:singleLine="true"
        android:textColor="@color/text_login_color"
        android:textColorHint="@color/text_login_color"
        android:textSize="@dimen/text_size_14" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/height_44" >

        <TextView
            android:id="@+id/btn_login_register"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_44"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="@string/register_string"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_44"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="@string/login_forget_password_string"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_30"
        android:background="@drawable/selector_login"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imv_login_use_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/qq_icon" />

            <ImageView
                android:id="@+id/imv_login_use_wb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:clickable="true"
                android:src="@drawable/sina_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:drawableLeft="@drawable/icon_warning"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center_horizontal"
                android:text="@string/text_notice"
                android:textColor="@drawable/selector_textcolor_orange_gray"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>