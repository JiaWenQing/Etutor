            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_1_7"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.0dip"
        android:orientation="horizontal"
        android:padding="0.0dip" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/course_left_gray"
            android:gravity="center"
            android:text="下午" />

        <CheckBox
            android:id="@+id/rb_2_1"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_2_2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_2_3"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_2_4"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_2_5"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_2_6"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_2_7"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/course_left_gray"
            android:gravity="center"
            android:text="晚上" />

        <CheckBox
            android:id="@+id/rb_3_1"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_3_2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_3_3"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_3_4"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_3_5"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_3_6"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_3_7"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
