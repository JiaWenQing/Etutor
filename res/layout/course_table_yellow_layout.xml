<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_course_table_week"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_title_yellow"
            android:gravity="center"
            android:text="时间" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_title_yellow_bg"
            android:gravity="center"
            android:text="一" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_title_yellow_bg"
            android:gravity="center"
            android:text="二" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_title_yellow_bg"
            android:gravity="center"
            android:text="三" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_title_yellow_bg"
            android:gravity="center"
            android:text="四" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_title_yellow_bg"
            android:gravity="center"
            android:text="五" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_title_yellow_bg"
            android:gravity="center"
            android:text="六" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_title_yellow_bg"
            android:gravity="center"
            android:text="日" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/course_left_gray"
            android:gravity="center"
            android:text="上午" />

        <CheckBox
            android:id="@+id/rb_1_1"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_1_2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:checked="true"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_1_3"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:checked="true"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_1_4"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/course_checkbox_yellow_style"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/rb_1_5"
