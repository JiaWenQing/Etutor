<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_42"
        layout="@layout/main_head_bar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_about_our"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_below="@+id/textView1"
        android:text="@string/text_about_out_info"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:minHeight="@dimen/height_200"
        android:minWidth="@dimen/height_200"
        android:layout_below="@+id/include1"
        android:layout_marginTop="@dimen/margin_50"
        android:layout_marginBottom="@dimen/margin_10"
        android:src="@drawable/app_qr_code" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_below="@+id/textView6"
        android:text="客服电话：" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="@dimen/margin_5"
        android:text="官方网址：" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginBottom="@dimen/margin_5"
        android:text="应用介绍：" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_10"
        android:text="@string/text_image_info" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_alignParentLeft="true"
        android:text="用户协议：" />

    <TextView
        android:id="@+id/tv_server_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/tv_agreement"
        android:autoLink="phone"
        android:layout_marginLeft="@dimen/margin_10"
        android:text="@string/text_server_phone"
        android:textColor="@color/text_need_title"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/tv_server_phone"
        android:autoLink="web"
        android:text="@string/text_server_web" />

    <TextView
        android:id="@+id/tv_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_marginLeft="-8dp"
        android:gravity="center"
        android:text="@string/text_agreement"
        android:textColor="@color/text_agreement"
         />

</RelativeLayout>