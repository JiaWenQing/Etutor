<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/main_head_bar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/text_school_name"
        android:textSize="@dimen/text_size_14" />

    <EditText
        android:id="@+id/et_school_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/button_bg_normal"
        android:ems="10"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:inputType="text"
        android:maxLength="16"
        android:hint="@string/text_school_name"
        android:textSize="@dimen/text_size_10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:singleLine="true"
        android:text="@string/text_address1"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvbtn_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg_normal"
            android:drawableRight="@drawable/search_teacher_filter_arrow"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/text_choose"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tvbtn_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/button_bg_normal"
            android:drawableRight="@drawable/search_teacher_filter_arrow"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/text_choose"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tvbtn_region"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/button_bg_normal"
            android:drawableRight="@drawable/search_teacher_filter_arrow"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/text_choose"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/distance"
        android:textSize="@dimen/text_size_14" />

    <include layout="@layout/timer_shaft" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:text="@string/text_school_genre"
        android:textSize="@dimen/text_size_14" />

    <RadioGroup
        android:id="@+id/rg_school_type"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_44"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_unlimited_type"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:checked="true"
            android:gravity="center"
            android:text="@string/text_mode_1"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />
        <RadioButton
            android:id="@+id/rb_kindergarten"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:gravity="center"
            android:text="@string/text_school_category_infant"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />

        <RadioButton
            android:id="@+id/rb_primary_school"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:gravity="center"
            android:text="@string/text_school_category_primary"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />

        <RadioButton
            android:id="@+id/rb_middle_school"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:gravity="center"
            android:text="@string/text_school_category_secondary"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />
        <RadioButton
            android:id="@+id/rb_highmiddle_school"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:gravity="center"
            android:text="@string/text_school_category_high"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />

        <RadioButton
            android:id="@+id/rb_university"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:gravity="center"
            android:text="@string/text_school_category_university"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />
        <RadioButton
            android:id="@+id/rb_other"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:gravity="center"
            android:text="@string/text_school_genre_other"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />
    </RadioGroup>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:text="@string/text_school_category"
        android:textSize="@dimen/text_size_14" />

    <RadioGroup
        android:id="@+id/rg_school_category"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_44"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_unlimited_category"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:checked="true"
            android:gravity="center"
            android:text="@string/text_mode_1"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />
        <RadioButton
            android:id="@+id/rb_public_school"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:gravity="center"
            android:text="@string/text_school_genre_public"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />

        <RadioButton
            android:id="@+id/rb_private_school"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:gravity="center"
            android:text="@string/text_school_genre_private"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />
        <RadioButton
            android:id="@+id/rb_other_school"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1.0"
            android:background="@drawable/selector_lecture_mode"
            android:button="@color/text_black"
            android:gravity="center"
            android:text="@string/text_school_genre_other"
            android:textColor="@drawable/selector_textcolor_orange_gray"
            android:textSize="@dimen/text_size_10" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_filtrate_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/selector_button_register"
            android:text="@string/complete"
            android:textColor="@color/text_white" />
    </LinearLayout>

</LinearLayout>