<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_60" >

        <TextView
            android:id="@+id/tv_posts_send_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:text="A教师"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_is_poster"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_15"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@drawable/icon_posts_landlord"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_posts_receive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:hint="回复 B教师 :"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_posts_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_60"
        android:text="dsafdsadsadsadsads"
        android:textColor="@color/text_login_color"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_60"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_reply_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="right|center_vertical"
            android:hint="@string/text_assess_time"
            android:maxLength="19"
            android:textColor="@color/text_login_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_inform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/text_inform"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

</LinearLayout>