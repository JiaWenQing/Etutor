<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/location_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/common_dialog_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/location_dialog_title_bg"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_16"
        android:text="选择城市"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_1"
        android:background="@drawable/line" />

    <LinearLayout
        android:id="@+id/common_dialog_layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

   

</LinearLayout>